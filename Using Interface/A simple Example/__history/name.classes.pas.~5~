    Tperson = class(TInterfacedObject, iName)
        function FirstName: string;
        function LastName: string;

        constructor Create;
        destructor Destroy; override;
        class function New: iName;
    end;

implementation

{ Tperson }

constructor Tperson.Create;
begin

end;

